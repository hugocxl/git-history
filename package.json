{
  "name": "git-file-timeline",
  "displayName": "Git File Timeline",
  "description": "Visual git file history with syntax-highlighted diffs",
  "version": "1.0.2",
  "publisher": "hugocxl",
  "author": {
    "name": "Hugo Corta",
    "email": "corta.hugo@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugocxl/git-history"
  },
  "homepage": "https://github.com/hugocxl/git-history#readme",
  "bugs": {
    "url": "https://github.com/hugocxl/git-history/issues"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#011627",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "SCM Providers",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "git",
    "history",
    "log",
    "file",
    "commit",
    "diff"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "git-file-timeline.show",
        "title": "Git File Timeline"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "git-file-timeline.show",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "git-file-timeline.show"
        }
      ]
    }
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:ext\" \"pnpm dev:webview\"",
    "dev:ext": "vite build --mode extension --watch",
    "dev:webview": "vite build --watch",
    "build": "vite build --mode extension && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.webview.json --noEmit",
    "check": "biome check .",
    "format": "biome format --write .",
    "package": "pnpm build && vsce package --no-dependencies",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@pierre/diffs": "^1.0.4",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.108.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
