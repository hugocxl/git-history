{
  "run-tests": {
    "description": "Run all tests (prettier + jest)",
    "command": "yarn test",
    "workingDirectory": "."
  },
  "run-unit-tests": {
    "description": "Run jest unit tests only",
    "command": "yarn test-cra",
    "workingDirectory": "."
  },
  "check-format": {
    "description": "Check code formatting with prettier",
    "command": "yarn test-prettier",
    "workingDirectory": "."
  },
  "format": {
    "description": "Auto-format code with prettier",
    "command": "yarn format",
    "workingDirectory": "."
  },
  "dev": {
    "description": "Start development server",
    "command": "yarn start",
    "workingDirectory": "."
  },
  "build-web": {
    "description": "Build production web app",
    "command": "yarn build",
    "workingDirectory": "."
  },
  "build-cli": {
    "description": "Build CLI package",
    "command": "yarn build",
    "workingDirectory": "cli"
  },
  "build-vscode": {
    "description": "Build VS Code extension",
    "command": "yarn build",
    "workingDirectory": "vscode-ext"
  },
  "storybook": {
    "description": "Start Storybook for component development",
    "command": "yarn storybook",
    "workingDirectory": "."
  },
  "install-deps": {
    "description": "Install all dependencies",
    "command": "yarn install",
    "workingDirectory": "."
  },
  "install-cli-deps": {
    "description": "Install CLI dependencies",
    "command": "yarn install",
    "workingDirectory": "cli"
  },
  "install-vscode-deps": {
    "description": "Install VS Code extension dependencies",
    "command": "yarn install",
    "workingDirectory": "vscode-ext"
  }
}
